<?xml version="1.0" encoding="utf-8"?>
<manifest
	xmlns:android="http://schemas.android.com/apk/res/android"
	package="net.kdt.pojavlaunch"
	android:versionCode="156189"
	android:versionName="2.4.2_6345b_20200321">

	<uses-sdk
		android:minSdkVersion="21"
		android:targetSdkVersion="24"/>

	<uses-feature
		android:glEsVersion="0x00020000"/>

	<uses-permission
		android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

	<uses-permission
		android:name="android.permission.READ_EXTERNAL_STORAGE"/>

	<uses-permission
		android:name="android.permission.INTERNET"/>

	<application
		android:largeHeap="true"
		android:allowBackup="true"
		android:name=".PojavApplication"
		android:theme="@style/AppTheme"
		android:label="@string/app_name"
		android:icon="@drawable/ic_launcher"
		android:roundIcon="@drawable/ic_launcher"
		android:resizeableActivity="true">

		<activity
			android:label="@string/app_short_name"
			android:name=".PojavLoginActivity"
			android:screenOrientation="sensorLandscape"
			android:configChanges="keyboardHidden|orientation|screenSize">

			<intent-filter>

				<action
					android:name="android.intent.action.MAIN"/>

				<category
					android:name="android.intent.category.LAUNCHER"/>

			</intent-filter>

		</activity>

		<activity
			android:name=".MCLauncherActivity"
			android:screenOrientation="sensorLandscape"
			android:configChanges="keyboardHidden|orientation|screenSize"/>

		<activity
			android:theme="@style/RunTheme"
			android:excludeFromRecents="false"
			android:name=".MainActivity"
			android:screenOrientation="sensorLandscape"
			android:configChanges="keyboardHidden|orientation|screenSize"/>

		<activity
			android:label="@string/update_console"
			android:name=".UpdateAppActivity"
			android:screenOrientation="sensorLandscape"
			android:configChanges="keyboardHidden|orientation|screenSize"/>

		<activity
			android:process=":second"
			android:name="com.kdt.crackactivity.MainActivity"
			android:screenOrientation="sensorLandscape"
			android:configChanges="keyboardHidden|orientation|screenSize"/>

		<service
			android:name="com.kdt.crackactivity.floatingact.FloatingActivityService"
			android:enabled="true"
			android:exported="false"/>

	</application>

</manifest>

